{% extends "plantilla.twig" %}

{% block title %}Clientes{% endblock %}

{% block main %}
    <div class="container mt-4">
        <h3>Clientes</h3>
        <a class="btn btn-primary mb-3" href="crear-cliente">Crear cliente</a>

        <table class="table">
            <thead>
                <tr>
                    <th>DNI</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Correo</th>
                    <th>Direccion</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {# Recoger lista de productos de la base de datos (hecho) #}
                {% for cliente in clientes %}
                    <tr>
                        <td>{{ cliente.dni }}</td>
                        <td>{{ cliente.nombre }}</td>
                        <td>{{ cliente.apellido }}</td>
                        <td>{{ cliente.correo }}</td>
                        <td>{{ cliente.direccion }}</td>
                        <td>
                            <a class='btn btn-info btn-sm' href='editar-cliente?id={{ cliente.id }}'>Editar</a>
                        </td>
                        <td>
                            <a class='btn btn-danger btn-sm' href='eliminar-cliente?id={{ cliente.id }}'>Eliminar</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
