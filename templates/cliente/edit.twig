{% extends "plantilla.twig" %}
{% block title %}Editar cliente
{% endblock %}
{% block main %}
	<h3>Editar un producto</h3>
	<a href="clientes">Atras</a>

	<form action='update-cliente' method="post">
		<input type="hidden" name="id" id="id" value='{{cliente.id}}'>
		<label for="dni">Dni:</label>
		<input type="text" name="dni" id="dni" value='{{cliente.dni}}'>
		<label for="nombre">Nombre:</label>
		<input type="text" name="nombre" id="nombre" value='{{cliente.nombre}}'>
		<label for="apellido">Apellido:</label>
		<input type="text" name="apellido" id="apellido" value='{{cliente.apellido}}'>
		<label for="correo">Correo:</label>
		<input type="text" name="correo" id="correo" value='{{cliente.correo}}'>
		<label for="direccion">direccion:</label>
		<input type="text" name="direccion" id="direccion" value='{{cliente.direccion}}'>
		<button type="submit" class="boton-formulario">Editar</button>
	</form>
{% endblock %}
