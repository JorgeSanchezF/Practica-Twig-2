{% extends "plantilla.twig" %}

{% block title %}Pedidos
{% endblock %}

{% block main %}
	<div class="container mt-4">
		<h3>Pedidos</h3>
		<a href="crear-pedido" class="btn btn-primary mb-3">Crear pedido</a>
		<a href="pedidos?filtro=precio" class="btn btn-secondary boton-filtro">Ordenar por Precio de bajo a alto</a>
		<a href="pedidos?filtro=nombre" class="btn btn-secondary boton-filtro">Ordenar por Nombre</a>
		<a href="pedidos?filtro=stock" class="btn btn-secondary boton-filtro">Ordenar por Stock</a>

		<table class="table">
			<thead>
				<tr>
					<th>Fecha</th>
					<th>Id cliente</th>
					<th>Dirección entrega</th>
					<th>Total</th>
					<th>Acciones</th>
				</tr>
			</thead>
			<tbody>
				{# Recoger lista de productos de la base de datos (hecho) #}
				{% for pedido in pedidos %}
					<tr>
						<td>{{ pedido.fecha }}</td>
						<td>{{ pedido.id_cliente }}</td>
						<td>{{ pedido.direccion_entrega }}</td>
						<td>{{ pedido.total }}€</td>
						<td>
							<a href='detalles-pedido?id={{ pedido.id }}' class='btn btn-info btn-sm'>Detalles</a>
						</td>
						<td>
							<a href='editar-pedido?id={{ pedido.id }}' class='btn btn-warning btn-sm'>Editar</a>
						</td>
						<td>
							<a href='eliminar-pedido?id={{ pedido.id }}' class='btn btn-danger btn-sm'>Eliminar</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
